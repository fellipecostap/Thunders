{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning" // Recomendado para logs SQL
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ThundersTechTestDb": "Data Source=",
    "RabbitMq": "amqp://guest:guest@localhost:5672",
    "Cache": "localhost:6379", 
  },
  "Rebus": {
    "QueueName": "thunders.queue",
    "NumberOfWorkers": 1,
    "MaxParallelism": 5
  },
  "Features": {
    "UseMessageBroker": true,
    "UseEntityFramework": true,
    "EnableDetailedErrors": false, 
    "EnableSensitiveDataLogging": false 
  },
  "ReportSettings": {
    "DefaultTopPlazasCount": 10,
    "CacheDurationMinutes": 30
  },
  "MessageBrokerSettings": {
    "QueueName": "toll-transactions",
    "RetryCount": 3,
    "PrefetchCount": 20
  }
}